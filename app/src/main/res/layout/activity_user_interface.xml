<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#006064"> <!-- สีพื้นหลังหลัก -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ===== ส่วนบน: ปุ่มย้อนกลับ + ไอคอนโปรไฟล์ ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- ปุ่มย้อนกลับ -->

            <!-- ไอคอนโปรไฟล์ -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/sym_def_app_icon"
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <!-- ===== หัวข้อหลัก ===== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ค้นหาห้องเรียน"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ตารางเรียน 1/2569\nนายเรืองชัย กัญหา"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_marginTop="4dp" />

        <!-- ===== ตารางเรียนแต่ละวัน ===== -->
        <!-- ใช้ TableLayout + TableRow พร้อมสีแยกสถานะชัดเจน -->
        <!-- ตัวอย่างวันจันทร์ -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1976D2"
            android:padding="8dp"
            android:text="จันทร์"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:stretchColumns="*">

            <!-- คาบเรียน 1 -->
            <TableRow
                android:layout_marginBottom="2dp"
                android:background="#E3F2FD">

                <TextView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:background="#C8E6C9"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="ปกติ"
                    android:textColor="@android:color/holo_green_dark" />

                <TextView
                    android:layout_height="52dp"
                    android:background="#FFFFFF"
                    android:padding="8dp"
                    android:text="การออกแบบระบบดิจิทัล \n          08:30-12:30"
                    android:textColor="@android:color/black" />

            </TableRow>

            <!-- คาบเรียน 2 -->
            <TableRow
                android:layout_marginBottom="2dp"
                android:background="#FFEBEE">

                <TextView
                    android:layout_height="match_parent"
                    android:background="#FFCDD2"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="ยกเลิกสลับ"
                    android:textColor="@android:color/holo_red_dark" />

                <TextView
                    android:background="#FFFFFF"
                    android:padding="8dp"
                    android:text="เครือข่ายคอมพิวเตอร์\n          13:30-17:30"
                    android:textColor="@android:color/black" />

            </TableRow>
        </TableLayout>

        <!-- ตัวอย่างวันอังคาร -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1976D2"
            android:padding="8dp"
            android:text="อังคาร"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:layout_marginTop="4dp">

            <TableRow
                android:background="#E3F2FD"
                android:layout_marginBottom="2dp">

                <TextView
                    android:text="ปกติ"
                    android:padding="8dp"
                    android:textColor="@android:color/holo_green_dark"
                    android:gravity="center"
                    android:background="#C8E6C9" />

                <TextView
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:padding="8dp"
                    android:text="ระบบฐานข้อมูลและอิเล็กทรอนิกส์\n08:30-12:30"
                    android:textColor="@android:color/black" />

            </TableRow>
        </TableLayout>

        <TextView
            android:background="#FFFFFF"
            android:padding="8dp"
            android:text="การออกแบบระบบดิจิทัล\n08:30-12:30"
            android:textColor="@android:color/black"  android:layout_height= "" android:layout_width=""/>

        <!-- ===== สามารถคัดลอก TableLayout สำหรับวันพุธ-ศุกร์ แล้วเปลี่ยนข้อมูลได้ ===== -->

    </LinearLayout>
</ScrollView>
